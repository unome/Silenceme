<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="onClickHandler"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.04" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.04"
                android:columnCount="35" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_column="2"
                    android:layout_columnSpan="2"
                    android:layout_row="0"
                    android:text="Settings"
                    android:textSize="20dip" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnSpan="4"
                    android:layout_row="1"
                    android:text="Set to Vibrate or Silent"
                    android:textSize="18dip" />

                <RadioButton
                    android:id="@+id/rButtonVibrate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="right"
                    android:layout_row="2"
                    android:checked="true"
                    android:text="Vibrate" />

                <RadioButton
                    android:id="@+id/rButtonSilent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="3"
                    android:layout_gravity="bottom"
                    android:layout_row="2"
                    android:text="Silent" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_column="0"
                    android:layout_columnSpan="4"
                    android:layout_row="4"
                    android:text="Silence only for busy events"
                    android:textSize="18dip" />

                <RadioButton
                    android:id="@+id/rbBusyYes"
                    android:layout_column="0"
                    android:layout_columnSpan="4"
                    android:layout_row="5"
                    android:layout_rowSpan="3"
                    android:text="Yes" />

                <RadioButton
                    android:id="@+id/rbBusyNo"
                    android:layout_column="3"
                    android:layout_gravity="left"
                    android:layout_row="5"
                    android:layout_rowSpan="2"
                    android:text="No" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_column="0"
                    android:layout_columnSpan="5"
                    android:layout_gravity="left"
                    android:layout_row="8"
                    android:text="Calendars to be monitored"
                    android:textSize="18dip" />

                <RadioButton
                    android:id="@+id/rB_allCal"
                    android:layout_column="0"
                    android:layout_gravity="left"
                    android:layout_row="9"
                    android:text="All" />

                <RadioButton
                    android:id="@+id/rB_selectedCal"
                    android:layout_column="3"
                    android:layout_row="9"
                    android:text="Selected" />

                <ScrollView
                    android:id="@+id/scrollView1"
                    android:layout_width="match_parent"
                    android:layout_height="234dp"
                    android:layout_column="0"
                    android:layout_columnSpan="5"
                    android:layout_row="10" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TableLayout
                            android:id="@+id/tL_accTable"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >
                        </TableLayout>
                    </LinearLayout>
                </ScrollView>

                <Button
                    android:id="@+id/buttonWriteReview"
                    android:layout_column="1"
                    android:layout_columnSpan="3"
                    android:layout_gravity="bottom"
                    android:layout_row="11"
                    android:layout_rowSpan="3"
                    android:onClick="onClickHandler"
                    android:text="Write a review" />

                <Space
                    android:layout_width="1dp"
                    android:layout_height="31dp"
                    android:layout_column="0"
                    android:layout_gravity="fill_horizontal"
                    android:layout_row="0" />

                <Space
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_column="0"
                    android:layout_gravity="fill_horizontal"
                    android:layout_row="2" />

                <Space
                    android:layout_width="1dp"
                    android:layout_height="10dp"
                    android:layout_column="0"
                    android:layout_row="5" />

                <Space
                    android:layout_width="20dp"
                    android:layout_height="1dp"
                    android:layout_column="1"
                    android:layout_row="0" />

                <Space
                    android:layout_width="18dp"
                    android:layout_height="1dp"
                    android:layout_column="2"
                    android:layout_row="0" />

                <Space
                    android:layout_width="204dp"
                    android:layout_height="1dp"
                    android:layout_column="3"
                    android:layout_gravity="fill_horizontal"
                    android:layout_row="0" />

                <Space
                    android:layout_width="89dp"
                    android:layout_height="1dp"
                    android:layout_column="0"
                    android:layout_gravity="fill_horizontal"
                    android:layout_row="0" />

                <Space
                    android:layout_width="1dp"
                    android:layout_height="29dp"
                    android:layout_column="0"
                    android:layout_row="11" />
            </GridLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>